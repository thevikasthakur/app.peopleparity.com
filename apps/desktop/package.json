{
  "name": "@people-parity/desktop",
  "productName": "People Parity",
  "version": "1.0.0",
  "description": "Time tracking and productivity monitoring application",
  "author": {
    "name": "People Parity Inc.",
    "email": "support@peopleparity.com"
  },
  "private": true,
  "main": "dist/main/index.js",
  "scripts": {
    "preinstall": "node scripts/setup-python.js",
    "postinstall": "electron-builder install-app-deps || echo 'Native modules build failed - Python may not be installed'",
    "start:safe": "node scripts/start.js dev",
    "start:prod": "node scripts/start.js start",
    "check:deps": "node scripts/check-native-deps.js",
    "rebuild": "npm rebuild better-sqlite3 && npm rebuild",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"npm run electron:dev\"",
    "dev:no-electron": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "electron:dev": "wait-on tcp:5174 && wait-on dist/main/index.js && node electron-dev.js",
    "dev:main": "tsc -w -p tsconfig.main.json",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build && node scripts/fix-paths.js",
    "start": "electron .",
    "dist": "electron-builder",
    "dist:mac": "npm run build && npm run rebuild:prod && electron-builder --mac",
    "rebuild:prod": "electron-rebuild -f -w sharp,better-sqlite3,uiohook-napi",
    "dist:win": "npm run build && npm run rebuild:prod && electron-builder --win",
    "dist:linux": "npm run build && npm run rebuild:prod && electron-builder --linux",
    "dist:all": "npm run build && electron-builder -mwl",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "fix:connection": "./scripts/fix-connection.sh",
    "fix:ipv6": "node scripts/fix-ipv6.js",
    "check:api": "curl -s http://127.0.0.1:3001/api/health || echo 'API server not running'",
    "start:all": "./scripts/start-all.sh"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-select": "^2.0.0",
    "@tanstack/react-query": "^5.17.19",
    "@types/better-sqlite3": "^7.6.13",
    "@types/ws": "^8.18.1",
    "active-win": "^8.1.0",
    "axios": "^1.6.5",
    "better-sqlite3": "^12.2.0",
    "date-fns": "^3.3.1",
    "dotenv": "^17.2.2",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "framer-motion": "^11.0.3",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.3",
    "screenshot-desktop": "^1.12.7",
    "sharp": "^0.33.5",
    "uiohook-napi": "^1.5.4",
    "ws": "^8.18.3",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9",
    "node-gyp": "^11.4.2",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9.2",
    "vite": "^5.0.11",
    "wait-on": "^8.0.4"
  }
}
