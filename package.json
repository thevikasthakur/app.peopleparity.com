{
  "name": "people-parity",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "extensions/*"
  ],
  "scripts": {
    "start": "node scripts/start-safe.js",
    "start:force": "node scripts/check-desktop-deps.js && node scripts/start-safe.js",
    "start:all": "./start-all.sh",
    "check:deps": "node scripts/check-desktop-deps-fast.js",
    "check:deps:force": "node scripts/check-desktop-deps.js",
    "rebuild:desktop": "node scripts/rebuild-desktop.js",
    "rebuild:quick": "cd apps/desktop && npx @electron/rebuild --force",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "api": "cd apps/api && npm run dev",
    "desktop": "cd apps/desktop && npm run dev",
    "desktop:safe": "npm run check:deps && npm run desktop",
    "env:local": "node scripts/setup-env.js local",
    "env:cloud": "node scripts/setup-env.js cloud",
    "env:auto": "node scripts/setup-env.js auto"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/node": "^20.11.0",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "packageManager": "npm@10.2.4",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2"
  }
}
